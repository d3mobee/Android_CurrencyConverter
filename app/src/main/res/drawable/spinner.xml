<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item>
                <shape  android:shape="rectangle">

                    <stroke android:color="#252525" android:width="3dp"/>
